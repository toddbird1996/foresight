# ==================================================
# FORESIGHT ENVIRONMENT VARIABLES
# ==================================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control!
# ==================================================

# --------------------------------------------------
# SUPABASE (Required)
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
# --------------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# --------------------------------------------------
# ANTHROPIC / CLAUDE AI (Required)
# Get this from: https://console.anthropic.com/account/keys
# --------------------------------------------------
ANTHROPIC_API_KEY=sk-ant-api03-...

# --------------------------------------------------
# STRIPE PAYMENTS (Required for paid features)
# Get these from: https://dashboard.stripe.com/apikeys
# --------------------------------------------------
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...

# Webhook secret - get from Stripe Dashboard > Webhooks
STRIPE_WEBHOOK_SECRET=whsec_...

# Price IDs - create products in Stripe Dashboard > Products
NEXT_PUBLIC_STRIPE_SILVER_PRICE_ID=price_...
NEXT_PUBLIC_STRIPE_GOLD_PRICE_ID=price_...

# --------------------------------------------------
# RESEND EMAIL (Required for notifications)
# Get this from: https://resend.com/api-keys
# --------------------------------------------------
RESEND_API_KEY=re_...

# --------------------------------------------------
# APP CONFIGURATION
# --------------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Foresight

# --------------------------------------------------
# OPTIONAL: PUSH NOTIFICATIONS
# Generate with: npx web-push generate-vapid-keys
# --------------------------------------------------
NEXT_PUBLIC_VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=

# --------------------------------------------------
# OPTIONAL: ANALYTICS
# --------------------------------------------------
NEXT_PUBLIC_GA_ID=G-...
NEXT_PUBLIC_POSTHOG_KEY=

# --------------------------------------------------
# DEVELOPMENT ONLY
# --------------------------------------------------
# Set to 'true' to enable debug logging
DEBUG_MODE=false
