# ==================================================
# FORESIGHT ENVIRONMENT VARIABLES
# ==================================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control!
# ==================================================

# --------------------------------------------------
# SUPABASE (Required)
# --------------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://gczoxokbeqoqsfyxlrtb.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=PASTE_YOUR_ANON_KEY_HERE
SUPABASE_SERVICE_ROLE_KEY=PASTE_YOUR_SERVICE_ROLE_KEY_HERE

# --------------------------------------------------
# ANTHROPIC / CLAUDE AI (Required)
# --------------------------------------------------
ANTHROPIC_API_KEY=PASTE_YOUR_ANTHROPIC_KEY_HERE

# --------------------------------------------------
# STRIPE PAYMENTS (Required for paid features)
# --------------------------------------------------
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=PASTE_YOUR_STRIPE_PUBLISHABLE_KEY_HERE
STRIPE_SECRET_KEY=PASTE_YOUR_STRIPE_SECRET_KEY_HERE

# Webhook secret - get from Stripe Dashboard > Webhooks
STRIPE_WEBHOOK_SECRET=PASTE_YOUR_STRIPE_WEBHOOK_SECRET_HERE

# Price IDs - create products in Stripe Dashboard > Products
NEXT_PUBLIC_STRIPE_SILVER_PRICE_ID=PASTE_YOUR_SILVER_PRICE_ID_HERE
NEXT_PUBLIC_STRIPE_GOLD_PRICE_ID=PASTE_YOUR_GOLD_PRICE_ID_HERE

# --------------------------------------------------
# RESEND EMAIL (Required for notifications)
# --------------------------------------------------
RESEND_API_KEY=PASTE_YOUR_RESEND_API_KEY_HERE

# --------------------------------------------------
# APP CONFIGURATION
# --------------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Foresight

# --------------------------------------------------
# OPTIONAL: PUSH NOTIFICATIONS
# Generate with: npx web-push generate-vapid-keys
# --------------------------------------------------
NEXT_PUBLIC_VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=

# --------------------------------------------------
# OPTIONAL: ANALYTICS
# --------------------------------------------------
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_POSTHOG_KEY=

# --------------------------------------------------
# DEVELOPMENT ONLY
# --------------------------------------------------
# Set to 'true' to enable debug logging
DEBUG_MODE=false
